    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Electron",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/electron",
            "args": [
                "main.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App Server",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/server/index.js",
        }
    ]
}